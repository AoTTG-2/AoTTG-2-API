@using AoTTG2.IDS.Areas.Identity.Pages.Account.Manage
@using AoTTG2.IDS.Extensions
@using AoTTG2.IDS.Models
@using Duende.IdentityServer.Extensions
@using Microsoft.AspNetCore.Identity
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetUserName();
    }
}

<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <a href="~/" class="navbar-brand">
            <img src="~/aottg2-logo2.svg" class="icon-banner">
            AoTTG2 IdentityServer
        </a>

        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link">@name</a>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Manage</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Identity/Account/Manage">Profile</a>
                        <a class="dropdown-item" href="/Identity/Account/Manage/ExternalLogins">External Logins</a>
                        <a class="dropdown-item" href="/Identity/Account/Manage/PersonalData">Personal Data</a>
                    </div>
                </li>
            </ul>

            <div class="nav-item">
                <a class="btn btn-info my-2 my-sm-0" asp-action="Logout" asp-controller="Account">Logout</a>
            </div>
        }
        else
        {
            <ul class="navbar-nav mr-auto"></ul>
            <div class="nav-item">
                <a class="btn btn-info my-2 my-sm-0" asp-action="Login" asp-controller="Account">Login</a>
            </div>
        }


    </nav>
</div>
