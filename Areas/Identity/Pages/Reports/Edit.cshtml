                <span asp-validation-for="ReportDao.SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportDao.Type" class="control-label"></label>
                <select asp-for="ReportDao.Type" class="form-control"></select>
                <span asp-validation-for="ReportDao.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportDao.Message" class="control-label"></label>
