            </div>
            <div class="form-group">
                <label asp-for="ReportDao.EntityType" class="control-label"></label>
                <select asp-for="ReportDao.EntityType" class="form-control"></select>
                <span asp-validation-for="ReportDao.EntityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportDao.SenderId" class="control-label"></label>
